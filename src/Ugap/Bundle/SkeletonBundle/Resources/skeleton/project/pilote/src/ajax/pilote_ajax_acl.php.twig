require pathFile('pilote_fct_ajax_acl.php');

ajaxDefine
	( 'acl.add'					// Ajax name from .htaccess
	, 'POST'					// Allowed verb
	, 'aclAdd'					// Function
	, array						// Parameters
		(ajaxParamBodyAsJson()
		)
	, array						// ACL
		(array('resource'=>'acl','right'=>'create')
		)
	);

ajaxDefine
	( 'acl.put'					// Ajax name from .htaccess
	, 'POST'					// Allowed verb
	, 'aclPut'					// Function
	, array						// Parameters
		(ajaxParam('id')
		,ajaxParamBodyAsJson()
		)
	, array						// ACL
		(array('resource'=>'acl','right'=>'write')
		)
	);

ajaxDefine
	( 'acl.delete'				// Ajax name from .htaccess
	, 'POST'					// Allowed verb
