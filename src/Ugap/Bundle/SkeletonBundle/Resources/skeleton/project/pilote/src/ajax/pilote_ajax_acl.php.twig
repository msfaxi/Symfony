		)
	, array						// ACL
		(array('resource'=>'acl','right'=>'delete')
		)
	);

ajaxDefine
	( 'acl.get'					// Ajax name from .htaccess
	, 'GET'						// Allowed verb
	, 'aclGet'					// Function
	, array						// Parameters
