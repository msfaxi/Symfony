[logfile]
; Section des properties au format logfile://<varname>
; ==================================================================

; Default TTL can be overrrided 
;section.ttl = SECTION_TTL

; Comportement du système de logfile
;  syslog	les traces sont envoyées dans le syslog même si un fichier de trace est déclaré
;  file		les traces sont envoyées dans le fichier de trace déclaré
;  all		les traces sont envoyées dans le syslog et le fichier de trace déclaré
;  none		aucune trace n'est envoyée, ni dans un fichier, ni dans le syslog
mode				= "file"

; Format de la trace envoyée au syslog
syslog.format		= LOGFILE_FORMAT_SYSLOG

; Paramètre ident passé à la fonction openlog
syslog.ident		= "PHP_APP"

; Paramètre facility passé à la fonction openlog
; Client La Poste:
;	LOG_LOCAL3 pour les pilotes interactifs et les silos
;	LOG_LOCAL4 pour les pilotes batches
syslog.facility		= LOG_LOCAL3

; Niveau minimum de trace au format syslog, voir http://www.php.net/manual/en/function.syslog.php
;  LOG_EMERG   = 0    system is unusable
;  LOG_ALERT   = 1    action must be taken immediately
;  LOG_CRIT    = 2    critical conditions
;  LOG_ERR     = 3    error conditions
;  LOG_WARNING = 4    warning conditions
;  LOG_NOTICE  = 5    normal, but significant, condition
;  LOG_INFO    = 6    informational message
;  LOG_DEBUG   = 7    debug-level message

; Liste des traces définies
; xxx.level       Niveau de trace au format syslog
; xxx.log         Nom du fichier de trace (chemin complet), valeur spécifique "syslog" possible
; xxx.format      Nom du format défini par l'applicatif

; Cette section doit être incluse dans chaque fichier INI de chaque NL
; avec la commande: section.include[]

