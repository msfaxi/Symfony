		    ,array
		    	('{{projectname}}-pilote'
		    	)
		    )
		,restfulDefinePUT
			('siloAclDroitRestPUT'
		    ,array
		    	(restfulParam('id')
		        ,restfulParamBodyAsJson()
		        ,restfulParamEtagFromJson('_version_')
		        )
		    ,array
		    	('{{projectname}}-pilote'
		    	)
		    )
		,restfulDefineDELETE
			('siloAclDroitRestDELETE'
		    ,array
